<div class="grid_16 margin_top_20 alpha omega">
  <%= uni_form_for(contest_description, :url => polymorphic_path([ :administrator, contest_description ]), :html => { :multipart => true }) do |f| %>
    <% f.fieldset(:type => "block", :legend => "Description") do %>
      <%= f.text_area(:content, :size => '60x3', :class => 'widgEditor', :label => "Content", :style => "width: 99%; height: 300px;") -%>
    <% end %>

    <div class="clear">&nbsp;</div><br />
    <p class="buttons"><%= pretty_button (contest_description.new_record? ? "Create" : "Update"), {:icon_path => "icons/tick.png"} %>
  <% end %>
</div>
