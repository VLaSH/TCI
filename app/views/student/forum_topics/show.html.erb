<div class="grid_11 margin_top_20 alpha">
  <%= render(:partial => 'student/forum_topics/show', :locals => { :forum_topic => @forum_topic }) -%>
  <h5>Responses to this Discussion</h5>
  <%= render(:partial => "student/forum_posts/forum_posts", :locals => {:forum_topic => @forum_topic})%>
