<div class="grid_11 margin_top_20 alpha">
  <% unless @assignments.empty? %>
    <table summary="List of assignments" class="pretty">
      <thead>
        <tr>
          <th>Title</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        <% @assignments.each do |assignment| %>
          <tr>
            <td><%= link_to(h(assignment.title), edit_administrator_assignment_path(assignment)) -%></td>
            <td align="right">
              <%= link_to(image_tag("icons/pencil.png", :alt => "Edit Assignment"), edit_administrator_assignment_path(assignment), :rel => "Edit Assignment") -%>
              &nbsp;
              <%= link_to(image_tag("icons/picture.png", :alt => "Attachments"), polymorphic_attachments_path(assignment), :rel => "Create, View or Edit Attachments") %>
              &nbsp;
              <%= link_to(image_tag("icons/arrow_switch.png", :alt => "Rearrangments"), administrator_assignment_rearrangements_path(assignment), :rel => "Create, View or Edit Rearrangements") %>
              &nbsp;
              <%= link_to(image_tag("icons/delete.png", :alt => "Delete Assignment"), delete_administrator_assignment_path(assignment), :rel => "Delete this assignment") -%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate(@assignments) %>
  <% else %>
    <p>No assignments exist.</p>
  <% end %>
</div>
<div class="grid_5 margin_top_20 omega">
  <p class="buttons">
    <%= pretty_button_link "Create new assignment", new_administrator_lesson_assignment_path(@lesson), {:icon_path => "icons/add.png"} %>
  </p>
  <div class="clear">&nbsp;</div><br />
</div>
<div class="clear">&nbsp;</div>
