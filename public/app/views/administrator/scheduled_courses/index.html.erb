<div class="grid_11 margin_top_20 alpha">
  <h6>Scheduled courses for <%= h(@course.title) -%></h6>
  <% unless @scheduled_courses.empty? %>
    <table summary="List of scheduled courses" class="pretty">
      <thead>
        <tr>
          <!-- <th class="centred">Starts</th>
          <th class="centred">Ends</th> -->
          <th class="centred">Enrollments</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        <% @scheduled_courses.each do |scheduled_course| %>
          <tr>
            <!-- <td class="centred"><%#= scheduled_course.starts_on.to_formatted_s(:long) -%></td>
            <td class="centred"><%#= scheduled_course.ends_on.to_formatted_s(:long) -%></td> -->
            <td class="centred"><%= link_to(scheduled_course.enrolments.size, administrator_scheduled_course_enrolments_path(scheduled_course), :rel => "There #{scheduled_course.enrolments.size == 1 ? 'is' : 'are'} #{pluralize(scheduled_course.enrolments.size, "student")} enroled on this course session") -%></td>
            <!-- <td align="right"><%#= link_to(image_tag("icons/delete.png", :alt => "Delete this Scheduled Course"), delete_administrator_scheduled_course_path(scheduled_course), :rel => "Delete this Scheduled Course") -%></td> -->
            <td align="right">
              <%= link_to 'Enrollments', administrator_scheduled_course_enrolments_path(scheduled_course) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate(@scheduled_course) %>
  <% else %>
    <p>No scheduled courses exist.</p>
  <% end %>
</div>
<div class="grid_5 margin_top_20 omega">
  <p class="buttons">
    <%#= pretty_button_link "Schedule a new course session", new_administrator_course_scheduled_course_path, {:icon_path => "icons/add.png"} %>
  </p>
  <div class="clear">&nbsp;</div><br />
</div>
<div class="clear">&nbsp;</div>
